<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.pcpv.animator.MainActivity">

    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <Button
        android:text="animator Scale"
        android:id="@+id/bt_scale_XY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="animator translation"
        android:id="@+id/bt_translationXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="animator rotation"
        android:id="@+id/bt_rotationXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="animator xy"
        android:id="@+id/bt_XY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

</LinearLayout>
